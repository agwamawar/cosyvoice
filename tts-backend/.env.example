# =============================================================================
# TTS Backend Configuration
# =============================================================================
# Copy this file to .env and customize for your environment.
# All variables have sensible defaults for local development.
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=tts-backend
APP_ENV=development          # development, staging, production
DEBUG=true                   # Enable debug mode and detailed errors

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
SERVER_HOST=0.0.0.0          # Bind address
SERVER_PORT=8000             # Server port
SERVER_WORKERS=1             # Number of uvicorn workers (use 1 for dev)
SERVER_RELOAD=true           # Hot reload on file changes (dev only)

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO               # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=pretty            # pretty (colored) or json (structured)

# -----------------------------------------------------------------------------
# Model
# -----------------------------------------------------------------------------
MODEL_PATH=./models/cosyvoice    # Path to CosyVoice model weights
MODEL_DEVICE=auto                # cuda, cpu, or auto (auto-detect)
MODEL_DTYPE=float16              # float16 or float32
USE_MOCK=true                    # Set to false when running on GPU

# -----------------------------------------------------------------------------
# Audio
# -----------------------------------------------------------------------------
AUDIO_DEFAULT_SAMPLE_RATE=22050  # Default output sample rate
AUDIO_DEFAULT_FORMAT=wav         # Default output format (wav, mp3, ogg, flac)
AUDIO_MAX_DURATION=300           # Max audio duration in seconds

# -----------------------------------------------------------------------------
# API
# -----------------------------------------------------------------------------
API_KEYS=dev-key-123,test-key-456    # Comma-separated valid API keys
RATE_LIMIT_REQUESTS=100              # Max requests per window
RATE_LIMIT_WINDOW=60                 # Rate limit window in seconds

# -----------------------------------------------------------------------------
# Voices
# -----------------------------------------------------------------------------
VOICES_DIRECTORY=./voices        # Directory for voice profiles and clones
