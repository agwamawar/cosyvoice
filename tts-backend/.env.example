# =============================================================================
# TTS Backend Environment Configuration
# =============================================================================
# Copy this file to .env and modify as needed.
# All variables have sensible defaults for development.
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# APP_NAME: Display name for the service
APP_NAME=TTS Backend

# APP_VERSION: Application version (shown in health check)
APP_VERSION=0.1.0

# ENVIRONMENT: Runtime environment (dev, staging, prod)
# - dev: enables debug features, relaxed security
# - staging: production-like but with extra logging
# - prod: optimized for production, strict security
ENVIRONMENT=dev

# DEBUG: Enable debug mode (detailed error messages, extra logging)
DEBUG=true

# -----------------------------------------------------------------------------
# Server Settings
# -----------------------------------------------------------------------------
# SERVER_HOST: Bind address (use 0.0.0.0 for all interfaces)
SERVER_HOST=0.0.0.0

# SERVER_PORT: HTTP port to listen on
SERVER_PORT=8000

# SERVER_WORKERS: Number of uvicorn workers (use 1 for development)
SERVER_WORKERS=1

# SERVER_RELOAD: Enable auto-reload on code changes (development only)
SERVER_RELOAD=true

# -----------------------------------------------------------------------------
# Model Settings
# -----------------------------------------------------------------------------
# MODEL_PATH: Path to CosyVoice model weights directory
MODEL_PATH=./models/cosyvoice

# MODEL_DEVICE: Inference device
# - auto: automatically detect GPU, fallback to CPU
# - cuda: force GPU (will fail if no GPU available)
# - cpu: force CPU (slower but works everywhere)
MODEL_DEVICE=auto

# MODEL_DTYPE: Model precision (affects memory usage and speed)
# - float32: full precision (most compatible)
# - float16: half precision (faster, less memory, requires GPU)
# - bfloat16: brain float (best for newer GPUs like A100)
MODEL_DTYPE=float32

# MODEL_VOICES_DIRECTORY: Directory to store voice profiles
MODEL_VOICES_DIRECTORY=./voices

# MODEL_USE_MOCK: Use mock TTS engine (no GPU required, for development)
# Set to 'false' for production with real CosyVoice model
MODEL_USE_MOCK=true

# -----------------------------------------------------------------------------
# Audio Settings
# -----------------------------------------------------------------------------
# AUDIO_DEFAULT_SAMPLE_RATE: Default output sample rate in Hz
AUDIO_DEFAULT_SAMPLE_RATE=22050

# AUDIO_DEFAULT_FORMAT: Default output format (wav, mp3, ogg, flac)
AUDIO_DEFAULT_FORMAT=wav

# AUDIO_MAX_INPUT_DURATION: Maximum input audio duration in seconds (for cloning)
AUDIO_MAX_INPUT_DURATION=300

# AUDIO_MAX_OUTPUT_DURATION: Maximum output audio duration in seconds
AUDIO_MAX_OUTPUT_DURATION=600

# AUDIO_MAX_FILE_SIZE_MB: Maximum upload file size in megabytes
AUDIO_MAX_FILE_SIZE_MB=50

# -----------------------------------------------------------------------------
# API Security Settings
# -----------------------------------------------------------------------------
# API_KEYS: Comma-separated list of valid API keys
# Leave empty to disable authentication (not recommended for production)
# Example: API_KEYS=key1,key2,key3
API_KEYS=dev-key-123

# API_RATE_LIMIT_REQUESTS: Maximum requests per window
API_RATE_LIMIT_REQUESTS=100

# API_RATE_LIMIT_WINDOW: Rate limit window in seconds
API_RATE_LIMIT_WINDOW=60

# -----------------------------------------------------------------------------
# Logging Settings
# -----------------------------------------------------------------------------
# LOG_LEVEL: Minimum log level to output
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# LOG_FORMAT: Log output format
# - pretty: colored, human-readable (for development)
# - json: structured JSON (for production log aggregation)
LOG_FORMAT=pretty
